{
  "name": "chiloh",
  "author": "Chiloh<me@chiloh.com>",
  "homepage": "https://blog.chiloh.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/chilohwei/chilohwei.github.io"
  },
  "bugs": {
    "url": "https://github.com/chilohwei/chilohwei.github.io/issues"
  },
  "scripts": {
    "prep": "gem install bundler && bundle install",
    "dev": "bundle exec jekyll serve --watch --trace",
    "start": "npm run dev",
    "build": "JEKYLL_ENV=production bundle exec jekyll build && npm run min",
    "min": "terser ./js/index.js -o ./js/index.min.js -c -m"
  },
  "devDependencies": {
    "terser": "^5.15.1"
  }
}
